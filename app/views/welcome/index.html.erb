  <div class="container">
    <div class="row">
      <div class="card">
      <div id="stories-container">
        <div class="card-body">
        <% @stories.each do |story| %>
            <h1 class="card-title"><%= story.title %></h1>
            <h4 class="card-text"><%= story.intro %></h4>
            <h4 class="btn btn-primary"><%= link_to 'Take me to the story', story_path(story) %></h4>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>

